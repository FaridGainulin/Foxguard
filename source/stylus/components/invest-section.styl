.invest-section
  // background-image: url('../images/invest-section-bg.jpg')
  // background-repeat: no-repeat
  // background-position: center
  // background-size: cover
  background-color #000

  &__container
    position relative
    z-index 1
    text-align: center
    padding 20px 0 1px
    +above($breakpoints.sm)
      padding 50px 0
    +above($breakpoints.md)
      padding 80px 0
    +above($breakpoints.xxl)
      padding 127px 0 183px

  &__sub-title
    padding 10px 0 15px
    +above($breakpoints.sm)
      padding 20px 0 40px
    +above($breakpoints.md)
      padding 30px 0 50px
    +above($breakpoints.xxl)
      padding 46px 0 60px

  &__cards
    +above($breakpoints.sm)
      display: flex
      justify-content center
      gap: 10px
    +above($breakpoints.md)
      gap: 20px

  &__card
    width 280px !important
    border-radius: 8px
    display: flex
    flex-direction: column
    align-items: center
    gap: 15px
    background-color #fff
    padding 20px 10px
    +above($breakpoints.sm)
      gap: 25px
      border-radius: 10px
      width 235px !important
      padding 20px 20px 25px 20px
    +above($breakpoints.md)
      gap: 30px
      border-radius: 12px
      width 308px !important
      padding 25px 25px 30px 25px
    +above($breakpoints.xxl)
      border-radius: 16px
      gap: 39px
      width 380px !important
      height: 441px
      padding 31px 31px 38px 31px

  &__card-title
    width 100%
    background-color #F5F5F5
    color: #373737
    border-radius: 6px
    display: flex
    justify-content center
    align-items: center
    height: 45px
    +above($breakpoints.sm)
      border-radius: 8px
      height: 50px
    +above($breakpoints.md)
      border-radius: 9px
      height: 55px
    +above($breakpoints.xxl)
      border-radius: 10px
      height: 60px

  &__card-text
    color: #000

  &__form
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      gap: 6px
    +above($breakpoints.md)
      gap: 7px
    +above($breakpoints.xxl)
      gap: 8px
    & > *
      width 260px !important
      +above($breakpoints.sm)
        width 190px !important
      +above($breakpoints.md)
        width 250px !important
      +above($breakpoints.xxl)
        width 300px !important
