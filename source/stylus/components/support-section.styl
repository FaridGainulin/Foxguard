.support-section
  // background-image: url('../images/support-section-bg.jpg')
  // background-repeat: no-repeat
  // background-position: center
  // background-size: cover
  background-color #060606

  &__container
    position relative
    padding 0 0 1px
    +above($breakpoints.sm)
      padding 0 0 70px
    +above($breakpoints.md)
      padding 0 0 90px
    +above($breakpoints.xxl)
      padding 0 0 181px

  &__title
    text-align: center
    padding-bottom 15px
    +above($breakpoints.sm)
      padding-bottom 30px
    +above($breakpoints.md)
      padding-bottom 50px
    +above($breakpoints.xxl)
      padding-bottom 81px

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-wrap: wrap
      justify-content center
      gap: 10px
    +above($breakpoints.md)
      gap: 20px

  &__card
    width 280px !important
    height: 120px
    display: flex
    flex-direction: column
    gap: 10px
    text-align: center
    background-color #242424
    border-radius: 8px
    padding 10px
    +above($breakpoints.sm)
      border-radius: 12px
      text-align: start
      gap: 15px
      width 235px !important
      height: 132px;
      padding: 15px 5px 15px 11px;
    +above($breakpoints.md)
      border-radius: 16px
      gap: 20px
      width 308px !important
      height: 160px
      padding 18px 5px 18px 18px
    +above($breakpoints.xxl)
      border-radius: 20px
      gap: 24px
      width 380px !important
      height: 193px
      padding 20px 5px 20px 20px
    &--secondary
      position relative
      +above($breakpoints.sm)
        width 480px !important
      +above($breakpoints.md)
        width 636px !important
      +above($breakpoints.xxl)
        width 780px !important

  &__card-num
    display: flex
    justify-content center
    align-items: center
    border-radius: 8px
    background-color #049841
    width 25px
    height: 25px
    +above($breakpoints.sm)
      width 27px
      height: 27px
    +above($breakpoints.md)
      width 32px
      height: 32px
    +above($breakpoints.xxl)
      width 37px
      height: 37px

  &__card-icon
    position: absolute
    width: 230px;
    height: auto;
    bottom: 0;
    right: 10px;
    +above($breakpoints.sm)
      width: 366px;
      right: 12px;
    +above($breakpoints.md)
      width: 443px;
      right: 35px;
    +above($breakpoints.xxl)
      width 536px
      right: 38px
