.city-section
  background-image: url('../images/city-section-bg.jpg')
  background-repeat: no-repeat
  background-size: cover
  background-position: center
  background-color #141414

  &__container
    position relative
    z-index 1
    text-align: center
    padding 20px 0
    +above($breakpoints.sm)
      text-align: start
      padding 50px 0
    +above($breakpoints.md)
      padding 80px 0
    +above($breakpoints.xxl)
      padding 144px 0 156px

  &__sub-title
    padding 10px 0 15px
    +above($breakpoints.sm)
      padding 10px 0 20px
    +above($breakpoints.md)
      padding 12px 0 30px
    +above($breakpoints.xxl)
      padding 12px 0 44px

  &__bottom
    width 100%
    height: 205px
    backdrop-filter: blur(7px);
    background: linear-gradient(180deg, rgba(76, 76, 76, 0.35) 32.29%, rgba(76, 76, 76, 0.35) 100%);
    border-radius: 8px
    padding 15px 8px
    display: flex
    flex-direction: column
    align-items: center
    gap: 15px
    +above($breakpoints.sm)
      width 530px
      height: 135px
      align-items: flex-start
      border-radius: 10px
      gap: 30px
      padding: 18px 10px 20px 30px;
    +above($breakpoints.md)
      width 680px
      height: 177px
      border-radius: 12px
      padding 25px 10px 35px 40px
      gap: 40px
    +above($breakpoints.xxl)
      width 820px
      height: 210px
      border-radius: 15px
      padding 32px 10px 42px 51px
      gap: 53px

  &__form
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      flex-direction: row
      gap: 6px
    +above($breakpoints.md)
      gap: 8px
    +above($breakpoints.xxl)
      gap: 10px
    input
      width 280px !important
      +above($breakpoints.sm)
        width 155px !important
      +above($breakpoints.md)
        width 190px !important
      +above($breakpoints.xxl)
        width 223px !important
    button
      width 280px !important
      +above($breakpoints.sm)
        width 145px !important
      +above($breakpoints.md)
        width 180px !important
      +above($breakpoints.xxl)
        width 207px !important
