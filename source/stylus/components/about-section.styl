.about-section
  // background-image: url('../images/about-section-bg.jpg')
  // background-repeat: no-repeat
  // background-position: center
  // background-size: cover
  background-color #060606

  &__container
    position relative
    z-index 1
    padding: 20px 0 40px;
    +above($breakpoints.sm)
      padding 30px 0 70px
    +above($breakpoints.md)
      padding 70px 0 90px
    +above($breakpoints.xxl)
      padding 115px 0 154px

  &__title
    text-align: center
    padding-bottom 15px
    +above($breakpoints.sm)
      padding-bottom 30px
    +above($breakpoints.md)
      padding-bottom 45px
    +above($breakpoints.xxl)
      padding-bottom 62px

  &__text,
  &__bottom-text
    text-align: center
    +above($breakpoints.sm)
      text-align: start

  &__text
    display: flex
    flex-direction: column
    align-items: center
    gap: 7px
    +above($breakpoints.sm)
      align-items: flex-start
      gap: 10px
    +above($breakpoints.md)
      gap: 18px
    +above($breakpoints.xxl)
      gap: 24px

  &__bottom
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    margin-top 15px
    border-radius: 8px
    box-shadow: 0 4px 25px 1px rgba(0, 0, 0, 0.15);
    background: linear-gradient(180deg, #0b9a45 0%, #fff 100%);
    +above($breakpoints.sm)
      border-radius: 10px
      flex-direction: row
      align-items: flex-end
      margin-top 50px
    +above($breakpoints.md)
      border-radius: 12px
      margin-top 70px
    +above($breakpoints.xxl)
      border-radius: 16px
      margin-top 104px
      height: 446px

  &__bottom-text
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    gap: 10px
    padding 15px 10px
    border-radius: 8px
    background-color #fff
    color: #241F1B
    +above($breakpoints.sm)
      width 330px
      height: 100%
      border-radius: 10px
      align-items: flex-start
      justify-content flex-end
      gap: 15px
      padding: 223px 5px 20px 25px;
    +above($breakpoints.md)
      width: 430px;
      border-radius: 12px;
      gap: 20px;
      padding: 252px 5px 25px 30px;
    +above($breakpoints.xxl)
      width 559px
      border-radius: 16px
      gap: 24px
      padding 20px 5px 34px 40px

  &__bottom-feedback
    padding 14px
    +above($breakpoints.sm)
      padding 30px
    +above($breakpoints.md)
      padding 40px
    +above($breakpoints.xxl)
      padding 62px 58px 63px 47px

  &__form
    width 280px
    display: flex
    flex-direction: column
    gap: 5px
    +above($breakpoints.sm)
      width 330px
    +above($breakpoints.md)
      width 450px
      gap: 6px
    +above($breakpoints.xxl)
      width 514px
      gap: 7px
