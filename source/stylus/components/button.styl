.btn
  height: 45px
  width 100%
  user-select: none
  position: relative
  display: flex;
  justify-content: center
  align-items: center
  overflow: hidden
  color: #fff
  border-radius: 13px
  background: linear-gradient(90deg, #00983c 0%, #005c24 100%);
  text-transform: uppercase
  font-family: 'Roboto-Bold'
  font-weight: 700
  font-size: 14px
  line-height: 110%
  transition transform 0.5s, top 0.8s
  +above($breakpoints.sm)
    font-size: 16px;
    height: 50px;
  +above($breakpoints.md)
    font-size: 18px;
    height: 55px;
  +above($breakpoints.xxl)
    font-size: 20px;
    height: 59px

  &:hover
    transform: scale(1.02)

  &:active
    top: 3px

  &::before
    content: ""
    position: absolute
    top: 0;
    height: 100%;
    width: 36px;
    transform: skewX(-45deg)
    left: -150%
    pointer-events: none
    background: linear-gradient(90deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.4));
    animation: flareAnimation 4s infinite ease-in;
    vendord = official
    @keyframes flareAnimation
      0%
          left: -150%
      100% 
          left: 250%

  &--stroke
    -webkit-text-stroke: 2px #ffffff50

  &--secondary
    font-family: 'Roboto-Regular'
    font-weight: 400
    +above($breakpoints.sm)
      font-size: 14px;
    +above($breakpoints.md)
      font-size: 16px;
    +above($breakpoints.xxl)
      font-size: 18px;
      height: 60px

  &--invest
    +above($breakpoints.xxl)
      height: 60px
