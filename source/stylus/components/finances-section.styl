  &__bottom
    position relative
    width 100%
    backdrop-filter: blur(7px);
    background: linear-gradient(180deg, rgba(76, 76, 76, 0.35) 32.29%, rgba(76, 76, 76, 0.35) 100%);
    border-radius: 8px
    padding 15px 10px
    text-align: center
    display: flex
    flex-direction: column
    align-items: center
    gap: 15px
    +above($breakpoints.sm)
      align-items: flex-start
      gap: 20px
      text-align: start
      width 550px
      border-radius: 10px
      padding 20px 10px 20px 20px
    +above($breakpoints.md)
      gap: 25px
      width 720px
      height: 157px
      border-radius: 12px
      padding 25px 10px 30px 40px
    +above($breakpoints.xxl)
      gap: 27px
      border-radius: 15px
      width 820px
      height: 182px
      padding 32px 10px 40px 51px

  &__bottom-img
    position: absolute
    width: 130px;
    height: auto;
    bottom: 207px;
    right: -5px;
    +above($breakpoints.sm)
      width: 290px;
      bottom: 0;
      right: -88px;
    +above($breakpoints.md)
      width: 390px;
      right: -119px;
    +above($breakpoints.xxl)
      width 443px
      right: -135px

  &__form
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      flex-direction: row
      gap: 6px
    +above($breakpoints.md)
      gap: 8px
    +above($breakpoints.xxl)
      gap: 10px
    input
      width 280px !important
      +above($breakpoints.sm)
        width 155px !important
      +above($breakpoints.md)
        width 190px !important
      +above($breakpoints.xxl)
        width 223px !important
    button
      width 280px !important
      +above($breakpoints.sm)
        width 145px !important
      +above($breakpoints.md)
        width 180px !important
      +above($breakpoints.xxl)
        width 207px !important

  &__btn-wrapper
    position relative
    &:after
      content: ""
      position: absolute
      z-index -1
      inset: -1px
      background: linear-gradient(180deg, rgba(224, 224, 224, 0), rgba(243, 243, 243, 1))
      border-radius: 13px
