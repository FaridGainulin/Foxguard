.finances-section
  // background-image: url('../images/finances-section-bg.jpg')
  // background-repeat: no-repeat
  // background-position: center
  // background-size: cover
  background: linear-gradient(180deg, #8acfa6 0%, #099a44 100%);

  &__container
    position relative
    z-index 1
    padding 20px 0
    +above($breakpoints.sm)
      padding 30px 0 60px
    +above($breakpoints.md)
      padding 50px 0 90px
    +above($breakpoints.xxl)
      padding 87px 0 139px

  &__img-bg
    position: absolute
    z-index -1
    width: 540px;
    height: auto;
    bottom: 0;
    right: -252px;
    +above($breakpoints.sm)
      width: 720px;
      bottom: 9px;
      right: -193px;
    +above($breakpoints.md)
      width: 850px;
      bottom: 0;
      right: -0;
    +above($breakpoints.xxl)
      width: 1210px;
      bottom: 18px;
      right: -288px;

  &__title
    text-align: center
    padding-bottom 15px
    +above($breakpoints.sm)
      padding-bottom 30px
    +above($breakpoints.md)
      padding-bottom 50px
    +above($breakpoints.xxl)
      padding-bottom 66px

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-wrap: wrap
      justify-content center
      gap: 10px
    +above($breakpoints.md)
      gap: 20px

  &__card-wrapper
    position relative
    width 280px !important
    +above($breakpoints.sm)
      width 210px !important
    +above($breakpoints.md)
      width 275px !important
    +above($breakpoints.xxl)
      width 313px !important
      height: 161px
      border-radius: 20px
    &:after
      content: ""
      position: absolute
      z-index -1
      background: linear-gradient(180deg, #ffffff, #00983C)
      inset: -1px
      border-radius: 8px
      +above($breakpoints.sm)
        border-radius: 12px
      +above($breakpoints.md)
        border-radius: 16px
      +above($breakpoints.xxl)
        border-radius: 20px

  &__card
    position relative
    width 100%
    height: 100%
    background-color #fff
    color: #000
    display: flex
    flex-direction: column
    gap: 5px
    padding 15px 10px
    border-radius: 8px
    text-align: center
    +above($breakpoints.sm)
      gap: 0
      text-align: start
      border-radius: 12px
      padding 40px 10px 15px 15px
    +above($breakpoints.md)
      border-radius: 16px
      padding 50px 10px 20px 20px
    +above($breakpoints.xxl)
      border-radius: 20px
      padding 65px 10px 20px 20px

  &__card-icon
    position: absolute
    width: 35px;
    height: 35px;
    top: 3px;
    right: 2px;
    +above($breakpoints.sm)
      width: 40px;
      height: 40px;
      top: 5px;
      right: 5px;
    +above($breakpoints.md)
      width: 45px;
      height: 45px;
      top: 7px;
      right: 6px;
    +above($breakpoints.xxl)
      width 58px
      height: 58px
      top: 10px
      right: 9px

  &__text
    padding: 0 120px 15px 0;
    text-align: center
    +above($breakpoints.sm)
      padding 40px 0 30px
    +above($breakpoints.md)
      padding 50px 0 40px
    +above($breakpoints.xxl)
      padding 63px 0 53px

